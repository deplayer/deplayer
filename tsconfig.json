{
  "compilerOptions": {
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/server",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
