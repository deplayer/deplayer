{
  "compilerOptions": {
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "esnext",
    "allowJs": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules" ,
        "options": {
          "customMatcher": "\\.(sc|c)ss$",
          "camelCase": "only"
        }
      }
    ]
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/server",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
